<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philschatz.checklist">

    <uses-permission android:name="ANDROID.PERMISSION.INTERNET" />
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_NETWORK_STATE" />

    <!--We set theme to DarkTheme because when the app opens it shows
    a white screen if our theme here is LightTheme. The screen is shown for
    about 1 second, but it's jarring if users have set Night Mode to true.
    -->
    <application
        android:name="com.philschatz.checklist.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomStyle.DarkTheme">
        <activity
            android:name="com.philschatz.checklist.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.philschatz.checklist.AddToDoActivity"
            android:parentActivityName="com.philschatz.checklist.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.philschatz.checklist.AboutActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.philschatz.checklist.MainActivity" />

        <activity
            android:name="com.philschatz.checklist.ReminderActivity"
            android:label="@string/app_name" />

        <service android:name="com.philschatz.checklist.TodoNotificationService" />
        <service android:name="com.philschatz.checklist.DeleteNotificationService" />

        <activity
            android:name="com.philschatz.checklist.SettingsActivity"
            android:parentActivityName="com.philschatz.checklist.MainActivity"

            /><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>


</manifest>
